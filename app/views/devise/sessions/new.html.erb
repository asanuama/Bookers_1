<!--ログイン-->
<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <h2>Log in</h2>
        <%= form_with model: @user, url: session_path(resource_name), local: true do |f| %>
          <div class="form-group has-icon">
            <!--メールアドレスでなく、名前でログインできるように変更-->
            <label for="inputName">Name</label>
            <%= f.text_field :name, autofocus: true, class:"form-control", id:"inputName"%>
          </div>
          <div class="form-group has-icon">
            <label for="inputPassword">Password</label>
            <%= f.password_field :password, autocomplete: "off", class:"form-control", id:"inputPassword"%>
          </div>
          <%= f.submit "Log in", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
        <% end %>
        <!--部分テンプレート（signupとforget）-->
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>