<div class="container">
<div class="row">
<div class="col-lg-3">
  <% if @newbook.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% @newbook.errors.full_messages.each do |message| %>
          <li><%= "! error ! #{message}"%></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <h2>User info</h2>
  <div>
    <%= attachment_image_tag current_user, :profile_image, :fill, 100, 100, format: 'jpeg' %>
  </div>
  <div>
    <span>name </span>
    <span><%= current_user.name%></span>
  </div>
  <div>
    <span>introduction </span>
    <span><%= current_user.introduction %></span>
  </div>
  <%=link_to 'edit(工具マーク)', edit_user_path(current_user.id)%>

  <h2>New book</h2>
  <%= form_with model:@newbook, local:true do |f| %>
  <p>title</p>
  <%= f.text_field :title%>
  <p>option</p>
  <%= f.text_field :body%>
  <div><%= f.submit 'Create Book' %></div>
  <% end %>
</div>

<div class="col-lg-7">
  <h2>Books</h2>
  <table class="table">
      <thead>
          <tr>
              <th>&nbsp;</th>
              <th>Title</th>
              <th>Option</th>
          </tr>
      </thead>
      <tbody>
      <% @books.each do |book| %>
          <tr>
            <td>
              <% if book.user.profile_image.nil?%>
                <%= link_to image_tag("no_image.png" , size:'100x100'), user_path(book.user.id)%>
              <% else %>
                <%= link_to user_path(book.user.id)  do %>
                  <%= attachment_image_tag book.user, :profile_image,  format: 'jpeg',size: "100x100" %>
                <% end %>
              <% end %>
            </td>
            <td><%=link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
          </tr>
      <% end %>
      </tbody>
  </table>
</div>
</div>
</div>