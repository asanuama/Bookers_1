      <h2>User info</h2>
      <div>
        <% if user.profile_image.nil?%>
          <%= image_tag 'no_image.png' ,size: '100x100'%>
        <% else %>
          <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg' %>
        <% end %>
      </div>
      <div>
        <span>name </span>
        <span><%= user.name%></span>
      </div>
      <div>
        <span>introduction</span>
        <span><%= user.introduction %></span>
      </div>
      <% if user.id == current_user.id%>
        <%=link_to edit_user_path(user.id) do%>
          <i class="fas fa-wrench"></i>
        <% end %>
      <% else %>
        <%=link_to user_path(current_user.id) do%>
          <i class="fas fa-wrench"></i>
        <% end %>
      <% end %>

      <h2>New book</h2>
      <%= form_with model:newbook, local:true do |f| %>
        <p>title</p>
        <%= f.text_field :title%>
        <p>option</p>
        <%= f.text_field :body%>
        <div><%= f.submit 'Create Book' %></div>
      <% end %>
