<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <%= render 'books/index'%>
    </div>

    <div class="col-xs-9">
      <h2>Users</h2>
      <table class = "table">
          <thead>
              <tr>
                  <th>image</th>
                  <th>name</th>
                  <th>&nbsp;</th>
              </tr>
          </thead>
          <tbody>
          <% @users.each do |user| %>
              <tr>
                  <td>
                  <% if user.profile_image.nil?%>
                      <%= image_tag 'no_image.png' ,size: '100x100'%>
                  <% else %>
                      <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg' %>
                  <% end %>
                  </td>
                  <td><%=user.name %></td>
                  <td><%=link_to 'Show',user_path(user.id)  %></td>
              </tr>
          <% end %>
          </tbody>
      </table>
    </div>
  </div>
</div>
