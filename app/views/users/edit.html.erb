<p>(users_edit画面)</p>

<% if @user.errors.any? %>
  <div id="error_explanation">
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= "! error ! #{message}"%></li>
      <% end %>
    </ul>
  </div>
<% end %>

<h2>User info</h2>
<%=form_with model:@user, local:true do |f|%>
<p>name</p>
<%= f.text_area :name%>

<p>image</p>
<%= f.attachment_field :profile_image %>

<p>introduction</p>
<%= f.text_area :introduction%>

<div><%=f.submit'Update User'%></div>
<% end %>

